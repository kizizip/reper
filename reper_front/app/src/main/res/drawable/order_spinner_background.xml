<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 기본 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- 배경색 -->
            <corners android:radius="2dp"/>  <!-- 모서리 둥글기 -->
            <stroke android:width="0.95dp" android:color="@color/darkgray"/>  <!-- 테두리 -->
        </shape>
    </item>

    <!-- 드롭다운 화살표 아이콘을 오른쪽에 배치 -->
    <item android:drawable="@drawable/ic_dropdown_arrow"
        android:gravity="end|center_vertical"
        android:right="8dp"/> <!-- 화살표 오른쪽 정렬 -->
</layer-list>
