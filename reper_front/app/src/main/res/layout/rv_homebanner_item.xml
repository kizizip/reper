<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rvHomeBannerImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/strawberry_banner"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/rvHomeBannerImg"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/rvHomeBannerTitle"
            android:text="딸기 시즌 신메뉴 출시!\n외우기 어려운 딸기메뉴\n레퍼가 도와줄게요"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rvHomeBannerButton"
            android:text="딸기메뉴 보러가기"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_light"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/banner_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>